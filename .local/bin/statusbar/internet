#!/bin/sh
case $BLOCK_BUTTON in
	1) $TERMINAL -e nmtui ;;
esac

[ "$(cat /sys/class/net/w*/operstate)" = 'down' ] && wifiicon="ğŸ“¡"

[ ! -n "${wifiicon+var}" ] && wifiicon=$(nmcli -t -f active,ssid dev wifi | egrep '^yes' | cut -d\: -f2 ; grep "^\s*w" /proc/net/wireless | awk '{ print "ğŸ“¶",int($3 * 100 / 70)"%" }')

echo $(printf "%s %s" "$wifiicon" "$(cat /sys/class/net/e*/operstate | sed "s/down/â/;s/up/ğŸŒ/")")
